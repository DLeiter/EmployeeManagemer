@model IEnumerable<EmployeeManager.Models.Employees>

@{
	ViewData["Title"] = "Index";
}
<script>
	$(document).ready(function () {
		$('#EmployeeTable').DataTable();
	});
</script>

<h2>Index</h2>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table table-hover" id="EmployeeTable">
	<thead class="">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.FirstName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.LastName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.StartDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.EndDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Terminated)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Shift)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Department)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Position)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.FirstName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.LastName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.StartDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.EndDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Terminated)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Shift)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Department.Department)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Position.Position)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
					<a asp-action="Details" asp-route-id="@item.Id">Details</a>
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
