						</div>
						<div class="form-group">
							<label asp-for="FavoriteColor" class="control-label"></label>
							<input asp-for="FavoriteColor" class="form-control" />
							<span asp-validation-for="FavoriteColor" class="text-danger"></span>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label asp-for="StartDate" class="control-label"></label>*
							<input asp-for="StartDate" class="form-control" />
							<span asp-validation-for="StartDate" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="Shift" class="control-label"></label>*
							<input asp-for="Shift" class="form-control" />
							<span asp-validation-for="Shift" class="text-danger"></span>
						</div>
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-12">
						<label asp-for="ExtraPermissions" class="control-label"></label>
						<input asp-for="ExtraPermissions" class="form-control" />
						<span asp-validation-for="ExtraPermissions" class="text-danger"></span>
					</div>
				</div>
			</div>
			<div class="col-md-4 mt-4">
				<partial name="_PhotoUpload" />
			</div>
		</div>
		<div class="form-group d-flex">
			<input type="submit" value="Save" class="btn btn-default ml-auto" />
		</div>
	</form>
